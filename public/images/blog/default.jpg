<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="675" viewBox="0 0 1200 675">
  <defs>
    <linearGradient id="defaultBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#F8F8F8;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E5E5E5;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="logoGlow" cx="50%" cy="50%">
      <stop offset="0%" style="stop-color:#A83232;stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:#A83232;stop-opacity:0" />
    </radialGradient>
  </defs>

  <!-- Background -->
  <rect width="1200" height="675" fill="url(#defaultBg)"/>
  <circle cx="600" cy="337.5" r="400" fill="url(#logoGlow)"/>

  <!-- Centered Logo -->
  <g transform="translate(600, 337.5)">
    <!-- Outer Circle -->
    <circle cx="0" cy="0" r="140" fill="none" stroke="#C93636" stroke-width="8"/>
    <!-- Inner Circle -->
    <circle cx="0" cy="0" r="115" fill="none" stroke="#C93636" stroke-width="8"/>
    <!-- Red Panda Face Background -->
    <circle cx="0" cy="0" r="95" fill="#C93636"/>

    <!-- Ear Highlights -->
    <path d="M -40 -55 L -35 -65 L -45 -60 Z" fill="white"/>
    <path d="M 40 -55 L 35 -65 L 45 -60 Z" fill="white"/>

    <!-- Eyes -->
    <ellipse cx="-20" cy="-15" rx="15" ry="20" fill="white"/>
    <ellipse cx="20" cy="-15" rx="15" ry="20" fill="white"/>

    <!-- Cheek Fur -->
    <path d="M -45 0 Q -40 10 -35 5" fill="white"/>
    <path d="M -50 5 Q -45 15 -40 10" fill="white"/>
    <path d="M 45 0 Q 40 10 35 5" fill="white"/>
    <path d="M 50 5 Q 45 15 40 10" fill="white"/>

    <!-- Nose -->
    <ellipse cx="0" cy="10" rx="10" ry="8" fill="#8B0000"/>

    <!-- Snout -->
    <ellipse cx="0" cy="20" rx="22" ry="15" fill="white"/>

    <!-- Mouth -->
    <path d="M 0 10 Q -12 25 -17 30" stroke="#8B0000" stroke-width="2.5" fill="none" stroke-linecap="round"/>
    <path d="M 0 10 Q 12 25 17 30" stroke="#8B0000" stroke-width="2.5" fill="none" stroke-linecap="round"/>
  </g>

  <!-- Text -->
  <text x="600" y="550" font-family="Arial, sans-serif" font-size="42" fill="#222222" text-anchor="middle" font-weight="bold">Red Panda Creations</text>
  <text x="600" y="600" font-family="Arial, sans-serif" font-size="24" fill="#555555" text-anchor="middle">Crafting in Code &amp; Clay</text>
</svg>
